# Example environment variables for Profile Service

# PostgreSQL connection string (Supabase or local Postgres)
DATABASE_URL=postgresql://postgres:[YOUR_PASSWORD]@localhost:54321/profile?sslmode=disable&search_path=profile

# Google Pub/Sub project/topic/subscription identifiers (or emulator)
PROFILE_PUBSUB_PROJECT_ID=your-project-id
PROFILE_PUBSUB_TOPIC_ID=profile.events
PROFILE_PUBSUB_SUBSCRIPTION_ID=profile.events.profile-consumer
PROFILE_PUBSUB_EMULATOR_ENDPOINT=localhost:8085

# OpenTelemetry OTLP exporter configuration
OTEL_SERVICE_NAME=profile-service
OTEL_EXPORTER_OTLP_PROTOCOL=grpc
OTEL_EXPORTER_OTLP_ENDPOINT=otel-collector:4317
OTEL_EXPORTER_OTLP_HEADERS=x-api-key=REPLACE_ME
OTEL_RESOURCE_ATTRIBUTES=service.group=profile,region=local
PROFILE_OTEL_SAMPLING_RATIO=0.25

# Feature toggles
PROFILE_ENABLE_LEGACY_API=false
