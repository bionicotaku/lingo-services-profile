# Example environment variables for running Profile Service integration tests

# Test database connection (use dedicated schema/database to avoid clobbering dev data)
DATABASE_URL=postgresql://postgres:[YOUR_PASSWORD]@localhost:54323/profile_test?sslmode=disable&search_path=profile
TEST_DATABASE_URL=postgresql://postgres:[YOUR_PASSWORD]@localhost:54323/profile_test?sslmode=disable&search_path=profile

# Pub/Sub emulator (optional). Leave blank to use real GCP project.
PROFILE_PUBSUB_PROJECT_ID=profile-test
PROFILE_PUBSUB_TOPIC_ID=profile.events
PROFILE_PUBSUB_SUBSCRIPTION_ID=profile.events.profile-test-consumer
PROFILE_PUBSUB_EMULATOR_ENDPOINT=localhost:8085

# OpenTelemetry exporter (point to local collector or leave empty for stdout)
OTEL_SERVICE_NAME=profile-service-test
OTEL_EXPORTER_OTLP_PROTOCOL=grpc
OTEL_EXPORTER_OTLP_ENDPOINT=localhost:4317
OTEL_EXPORTER_OTLP_HEADERS=
OTEL_RESOURCE_ATTRIBUTES=service.group=profile,region=test
PROFILE_OTEL_SAMPLING_RATIO=1.0

# Feature toggles for test runs
PROFILE_ENABLE_LEGACY_API=false
